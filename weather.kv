MDBoxLayout:
    orientation: 'vertical'

    MDTopAppBar:
        # title: "Ob-havo ma'lumoti"
        left_action_items: [["menu"]]
        elevation:4

    MDBottomNavigation:
        selected_color_background: "orange"
        text_color_active: "blue"
        text_color_normal: 1, 1, 1, 1


        MDBottomNavigationItem:
            name: "screen 1"
            text: "Asosiy Shaharlar"
            icon: "city-variant-outline"
    
            # Add Contents here
            ScrollView:
                MDList:
                    id:hudud_list
                    



        MDBottomNavigationItem:
            name: "screen 2"
            text: "Mening Joylashuvim"
            icon: "map-marker-radius-outline"
            on_tab_release: app.my_loc_tab()

            MDBoxLayout:
                id: my_location_box
                padding: "10dp"
                pos_hint: {"center_x": .5, "center_y": .5}
                
                
                MDCard:
                    id: my_location_card
                    line_color:(0.2, 0.2, 0.2, 0.8)
                    style:"elevated"
                    shadow_softness:2
                    shadow_offset:(0, 1)

                    MDGridLayout:
                        cols:2
                        padding: "7dp"
                        spacing: '5dp'
                        MDCard:
                            line_color:(0.2, 0.2, 0.2, 0.8)
                            style:"outlined"
                            shadow_softness:2
                            shadow_offset:(0, 1)
                            size_hint: 1,.5

                            MDGridLayout:
                                cols:1
                                padding: "10dp"
                                Image:
                                    allow_stretch:True
                                    keep_ratio:False
                                    id:weather_icon
                                    source:"no_weather_data.png"
                                    size_hint: .5,.8
                                MDLabel:
                                    text: "weather description"
                                    size_hint: .5,.2
                                

                        MDCard:
                            line_color:(0.2, 0.2, 0.2, 0.8)
                            style:"outlined"
                            shadow_softness:2
                            shadow_offset:(0, 1)
                            size_hint: 1,.5


        MDBottomNavigationItem:
            name: "screen 3"
            text: "Xarita Bo'yicha"
            icon: "map-search-outline"
    

            MDLabel:
                text: "My Instagram:\nsharipov_n"
                halign: "center"
